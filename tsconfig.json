{
    "compilerOptions": {
        "outDir": "./dist/esm",
        "declaration": true,
        "declarationDir": "./dist/types",
        "noImplicitAny": true,
        "module": "ES2022",
        "target": "ES6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node"
    },
    "files": ["index.ts"],
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"],
    "ts-node": {
        "esm": true
    }
}
